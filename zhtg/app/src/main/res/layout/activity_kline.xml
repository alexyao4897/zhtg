    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/common_white"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今开"/>

            <TextView
                android:id="@+id/open_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/common_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="昨收"/>
            <TextView
                android:id="@+id/close_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/common_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="最高"/>

            <TextView
                android:id="@+id/high_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="最低"/>
            <TextView
                android:id="@+id/low_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:id="@+id/fenshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分时"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/fenshi_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/red_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dayk_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日K"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/dayk_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/red_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/weekk_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="周K"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/weekk_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/red_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/monthk_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="月K"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/monthk_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/red_color"/>
    </LinearLayout>
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/common_white">
       <LinearLayout
           android:id="@+id/fenshi_linear"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <com.money.deep.tstock.view.MyLineChart
               android:id="@+id/line_chart"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2">
           </com.money.deep.tstock.view.MyLineChart>
           <com.github.mikephil.charting.charts.LineChart
               android:id="@+id/new_linechart"
               android:layout_width="match_parent"
               android:visibility="gone"
               android:layout_height="0dp"
               android:layout_weight="2">
           </com.github.mikephil.charting.charts.LineChart>
           <com.money.deep.tstock.view.MyBarChart
               android:id="@+id/fen_bar_chart"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_marginBottom="20dp"
               android:layout_weight="1">
           </com.money.deep.tstock.view.MyBarChart>
       </LinearLayout>
<LinearLayout
    android:id="@+id/kline_linear"
    android:layout_width="match_parent"
