<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/rank_stock_num_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="11"
    android:textSize="18sp"
    android:paddingLeft="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:textColor="@color/rb_list_num_color"/>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ratingbar_style"
        android:stepSize="0.5"
        android:layout_marginTop="20dp"
        android:isIndicator="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"></RatingBar>

    <TextView
        android:id="@+id/rank_stock_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="国金国鑫发起"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/ratingbar"
        android:textColor="@color/rb_list_name_color"/>

</RelativeLayout>
