<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/subview_color">
<!--<include layout="@layout/title_bar"></include>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_titlebar_bg_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextday_predict_str"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_white"
            android:padding="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/search"/>
        <RelativeLayout
            android:id="@+id/time_layout"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/common_white"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/drop_down_white_img"
                android:drawablePadding="3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/line_color"></View>

 <RelativeLayout
     android:id="@+id/refresh_view"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:visibility="gone"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp">
  <TextView
      android:id="@+id/recent_predict_time_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp" />
  <TextView
      android:id="@+id/refresh_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:layout_alignParentRight="true"
      android:text="@string/refresh_str"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/refresh_tv"
      android:layout_marginRight="10dp"
      android:layout_centerVertical="true"
      android:src ="@drawable/refresh_img" />
 </RelativeLayout>

 <!--<include layout="@layout/tag_view"></include>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/common_bg"
        >

        <LinearLayout
            android:id="@+id/linear_zixuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/zixuan_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zixuan_str"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/zixuan_slide"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/bottom_view_top_color"
            android:layout_gravity="center"></View>

        <LinearLayout
            android:id="@+id/linear_predict"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/predict_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/predict_str"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/predict_slide"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_weight="1">
            <TextView
                android:id="@+id/other_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other_str"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/other_slide"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/predict_jianyi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/subview_color"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/jianyi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/common_white">
        <RelativeLayout
            android:id="@+id/jianyi_oval_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/jianyi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"
                    android:textSize="16sp"
                    android:text="建议"/>
                <TextView
                    android:id="@+id/buy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"
                    android:textSize="16sp"
                    android:text="买入"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/jianyi_oval_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/wenhao_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jianyi_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/predict_buy_text_color"
                    android:textSize="16sp"
                    android:text="一日短线 | 稳健交易预测模型"/>
                <ImageView
                    android:id="@+id/wenhao_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/jianyi_text_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/wenhao_img"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/predict_suggestion_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:textColor="@color/predict_buy_bg_color" />
            <TextView
                android:id="@+id/update_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预测股更新于:"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textColor="@color/predict_buy_bottom_text_color"/>
        </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jianyi_layout"
            android:background="@color/common_white">
            <TextView
                android:id="@+id/last_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优选股"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_block_title_textcolor"
                android:layout_centerVertical="true"
                android:padding="10dp"/>
            <TextView
                android:layout_toRightOf="@id/last_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/home_sub_text_color"
                android:text="预测明日高点上涨突破1%的个股"/>
        </RelativeLayout>
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/emudeal_name_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">
    <LinearLayout
        android:id="@+id/emudeal_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
<!--    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/emudeal_name_list"
        android:background="@color/emudeal_name_bottom_linecolor"/>-->
</RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/common_white">
  <com.handmark.pulltorefresh.library.PullToRefreshListView
      xmlns:ptr="http://schemas.android.com/apk/res-auto"
      android:id="@+id/pullstocklistview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      ptr:ptrDrawable="@drawable/default_ptr_flip"
      ptr:ptrAnimationStyle="flip"
      ptr:ptrHeaderBackground="@color/common_white"
      ptr:ptrHeaderTextColor="@color/common_black"
      ></com.handmark.pulltorefresh.library.PullToRefreshListView>

  <LinearLayout
      android:id="@+id/nodata_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="gone"
      android:gravity="center">
     <ImageView
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:src="@drawable/no_pre_stock_icon"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/predict_no_tv_str"
       android:textSize="16sp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:textColor="@color/no_stock_color"/>
  </LinearLayout>
  <ProgressBar
      android:id="@+id/progressbar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="gone"/>
  <LinearLayout
      android:id="@+id/add_stock_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="gone"
      android:gravity="center">
     <ImageView
         android:id="@+id/add_img_btn"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:src="@drawable/add_stock_icon"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/add_stock_tv_str"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:textColor="@color/no_stock_color"/>
  </LinearLayout>
 </RelativeLayout>


